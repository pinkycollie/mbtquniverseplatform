{
  "name": "360-magicians-platform",
  "version": "2.0.0",
  "description": "Comprehensive deaf-first business platform - Where Technology Meets Magic",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:api": "cd api && npm run dev",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "cd frontend && npm run build",
    "build:api": "cd api && npm run build",
    "start": "npm run start:frontend",
    "start:frontend": "cd frontend && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "deploy": "vercel --prod",
    "deploy:staging": "vercel",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "init-magicians": "node scripts/init-magicians.js",
    "health-check": "node scripts/health-check.js",
    "update-deps": "npm-check-updates -u && npm install"
  },
  "dependencies": {
    "@google-cloud/firestore": "latest",
    "@google-cloud/pubsub": "latest",
    "@google-cloud/speech": "latest",
    "@google-cloud/storage": "latest",
    "@next/bundle-analyzer": "^14.0.4",
    "@vercel/analytics": "^1.1.1",
    "@vercel/edge-config": "^0.4.1",
    "@vercel/kv": "^1.0.1",
    "@vercel/postgres": "^0.5.1",
    "@vercel/speed-insights": "^1.0.2",
    "child_process": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "latest",
    "jsonwebtoken": "latest",
    "lucide-react": "^0.454.0",
    "multer": "latest",
    "next": "15.2.4",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "util": "latest"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "npm-check-updates": "^16.14.12",
    "postcss": "^8.5",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/360magicians/platform.git"
  },
  "keywords": [
    "deaf-first",
    "accessibility",
    "sign-language",
    "business-platform",
    "ai",
    "automation"
  ],
  "author": "360 Magicians Team",
  "license": "MIT"
}